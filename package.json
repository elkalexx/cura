{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:ssr": "vite build && vite build --ssr",
        "dev": "vite",
        "format": "prettier --write resources/",
        "format:check": "prettier --check resources/",
        "lint": "eslint . --fix",
        "start": "./vendor/bin/sail up -d",
        "stop": "./vendor/bin/sail down",
        "restart": "npm run stop && npm run start",
        "composer": "./vendor/bin/sail composer",
        "artisan": "./vendor/bin/sail artisan",
        "pint": "./vendor/bin/sail php ./vendor/bin/pint",
        "phpstan": "./vendor/bin/sail php ./vendor/bin/phpstan analyse --memory-limit=2G",
        "php": "./vendor/bin/sail php",
        "npm": "./vendor/bin/sail npm",
        "sk": "npm run build && zip -r ../curav2-src-$(date +%Y%m%d-%H%M).zip . -x '.env' -x 'public/hot' -x 'storage/logs/laravel.log'"
    },
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@tailwindcss/vite": "^4.1.11",
        "@types/node": "^22.13.5",
        "@vitejs/plugin-vue": "^6.0.0",
        "@vue/eslint-config-typescript": "^14.3.0",
        "concurrently": "^9.0.1",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-vue": "^9.32.0",
        "prettier": "^3.4.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "typescript": "^5.2.2",
        "typescript-eslint": "^8.23.0",
        "vite": "^7.0.4",
        "vue-tsc": "^2.2.4",
        "@tailwindcss/typography": "^0.5.16",
        "@types/lodash.debounce": "^4.0.9",
        "@tailwindcss/postcss": "^4.1.11"
    },
    "dependencies": {
        "@inertiajs/vue3": "^2.1.0",
        "@tailwindcss/vite": "^4.1.1",
        "@tanstack/vue-table": "^8.21.3",
        "@tiptap/extension-heading": "^2.25.0",
        "@tiptap/extension-link": "^2.25.0",
        "@tiptap/extension-underline": "^2.25.0",
        "@tiptap/starter-kit": "^2.25.0",
        "@tiptap/suggestion": "^2.25.0",
        "@tiptap/vue-3": "^2.25.0",
        "@vueuse/core": "^12.8.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^9.0.1",
        "date-fns": "^4.1.0",
        "dompurify": "^3.2.6",
        "laravel-vite-plugin": "^2.0.0",
        "lucide-vue-next": "^0.468.0",
        "reka-ui": "^2.2.0",
        "tailwind-merge": "^3.2.0",
        "tailwindcss": "^4.1.1",
        "tw-animate-css": "^1.2.5",
        "vue": "^3.5.13",
        "vue-filepond": "^7.0.4",
        "vue-sonner": "^2.0.1",
        "ziggy-js": "^2.4.2"
    },
    "optionalDependencies": {
        "@rollup/rollup-linux-x64-gnu": "4.9.5",
        "@tailwindcss/oxide-linux-x64-gnu": "^4.0.1",
        "lightningcss-linux-x64-gnu": "^1.29.1"
    }
}
